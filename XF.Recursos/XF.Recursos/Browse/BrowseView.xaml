<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XF.Recursos.Browse.BrowseView">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout Orientation="Vertical">
                <StackLayout Orientation="Horizontal">
                    <Entry Text="" Placeholder="URL" x:Name="txtURI" HorizontalOptions="FillAndExpand" />
                    <Button Text="Go" Clicked="GoInternet" WidthRequest="45" />
                </StackLayout>
                <StackLayout Orientation="Horizontal">
                    <Button Text="Voltar" HorizontalOptions="Start" Clicked="backButtonClicked" />
                    <Button Text="Avançar" HorizontalOptions="EndAndExpand" Clicked="forwardButtonClicked" />
                </StackLayout>
            </StackLayout>
            <WebView x:Name="webView" WidthRequest="1000" HeightRequest="1000" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>